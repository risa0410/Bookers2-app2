<main>
  <p id="notice"></p>
  <div class='container px-5 px-sm-0'>
  <div class='row'>
  <div class='col-md-3'>
    <h2>User info</h2>
      
    <table class='table'>
      <tr>
      <%= attachment_image_tag @user, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      </tr>
      <tr>
	    <th>name</th>
	    <th><%= @user.name %></th>
      </tr>
      
      <tr>
	    <th>introduction</th>
	    <th><%= @user.introduction %></th>
      </tr>
    </table>
ã€€
      <div class='row'>
      <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
      <span class="fas fa-user-cog" aria-hidden="true"></span>
      <% end %>
      </div>
      
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |f| %>
      
      <div class="form-group">
      <label for="book_title">Title</label></br>
      <%= f.text_field :title %>
      </div>
      
      <div class="form-group">
      <label for="book_opinion">Opinion</label></br>
      <%= f.text_area :opinion %>
      </div>
      
      <div class="form-group">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
      </div>
      <% end %>
      
      </div> 
    
    
    <div class='col-md-8 offset-md-1'>
    <h2>Books</h2>
    
    <table class='table table-hover table-inverse'>
      <thead>
       <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
       </tr>
      </thead>
      
      <% @books.each do |book| %>
      <tbody>
       <tr>
       <td>
       <%= link_to attachment_image_tag @user, :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
       </td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.opinion %></td>
       </tr>
      </tbody>
     <% end %> 
      
    </table>
    </div>
    
  </div>
  </div>
  
</main>
